{
  "manifest_version": 3,
  "name": "Social Insight Analyzer",
  "version": "2.1",
  "description": "Analyze your Instagram connections locally without hosting.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Social Analyzer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}